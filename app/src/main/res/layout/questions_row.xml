<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_line"
    android:layout_margin="6dp"
    android:padding="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal">
        <ImageView
            android:visibility="gone"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:src="@drawable/doctor_avatar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/docname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dr.Ahmed"
                android:layout_marginStart="3dp"
                android:textStyle="bold"
                android:textSize="23dp"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon 9/18/2017, 9:54 PM"
                android:layout_marginStart="3dp"
                android:textSize="18dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post-ironic shabby chic VHS, Marfa keytar flannel lomo try-hard keffiyeh cray. Actually fap fanny pack yr artisan trust fund. High Life dreamcatcher church-key gentrify. toast vinyl, cold-pressed try-hard blog authentic keffiyeh Helvetica lo-fi tilde Intelligentsia. Skateboard artisan letterpress before they sold out High Life messenger bag."
        android:textSize="20dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:textAlignment="viewStart"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="15dp"
        android:background="#F3F1F1"
        >
        <EditText
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:hint="Answer"
            android:textSize="20dp"
            />
        <ImageView
            android:id="@+id/send"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:src="@drawable/ic_send_black_24dp"
            android:backgroundTint="@color/blue"
            android:tint="@color/blue"
            android:layout_marginStart="15dp"
            />
    </LinearLayout>


</LinearLayout>